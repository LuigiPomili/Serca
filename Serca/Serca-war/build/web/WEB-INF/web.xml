        <description/>
        <role-name>PLAYER</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>PLAYER_WAITING</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>BOT</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>PLAYER_ON_TURN</role-name>
    </security-role>
