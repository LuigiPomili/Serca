    <element name="registration">
        <complexType>
            <sequence>
                <element name="uid">
                    <simpleType>
                        <restriction base="string">
                            <minLength value="6"/>
                            <maxLength value="10"/>
                            <pattern value="\w+"/>
                        </restriction>
                    </simpleType>
                </element>
                <element name="pwd">
                    <simpleType>
                        <restriction base="string">
                            <pattern value="\w+"/>
                            <minLength value="6"/>
                            <maxLength value="32"/>
                        </restriction>
                    </simpleType>
                </element>
                <element name="name">
                    <simpleType>
                        <restriction base="string">
                            <minLength value="2"/>
                            <maxLength value="50"/>
                            <pattern value="(\p{L}+\s*)+"/>
                        </restriction>
                    </simpleType>
                </element>
                <element name="surname">
                    <simpleType>
                        <restriction base="string">
                            <minLength value="2"/>
                            <maxLength value="50"/>
                            <pattern value="(\p{L}+\s*)+"/>
                        </restriction>
                    </simpleType>
                </element>
                <element name="mail">
                    <simpleType>
                        <restriction base="string">
                            <minLength value="5"/>
                            <whiteSpace value="collapse"/>
                            <maxLength value="100"/>
                            <pattern value="\p{L}(\w|\.|\_|\w)+\p{L}@(\w|\.|_\w)+\.([a-zA-Z]{2,4})"
                            />
                        </restriction>
                    </simpleType>
                </element>
            </sequence>
        </complexType>
    </element>

    <element name="registrationReply">
        <simpleType>
            <restriction base="string">
                <enumeration value="user registered"/>
                <enumeration value="error during user registration"/>
            </restriction>
        </simpleType>
    </element>
