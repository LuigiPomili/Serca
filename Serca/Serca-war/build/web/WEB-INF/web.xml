<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>RegistrationAuthenticationServletImpl</servlet-name>
        <servlet-class>it.unibo.cs.swarch.serca.servlet.regauth.RegistrationAuthenticationServletImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServletImpl</servlet-name>
        <servlet-class>it.unibo.cs.swarch.serca.servlet.chat.ChatServletImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TableManagemetServletImpl</servlet-name>
        <servlet-class>it.unibo.cs.swarch.serca.servlet.game.admin.TableManagemetServletImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TablePlayServletImpl</servlet-name>
        <servlet-class>it.unibo.cs.swarch.serca.servlet.game.play.TablePlayServletImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationAuthenticationServletImpl</servlet-name>
        <url-pattern>/reglog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatServletImpl</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TableManagemetServletImpl</servlet-name>
        <url-pattern>/admintables</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TablePlayServletImpl</servlet-name>
        <url-pattern>/move</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>SercaChatPermission</display-name>
        <web-resource-collection>
            <web-resource-name>chat</web-resource-name>
            <description/>
            <url-pattern>/chat</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>LOGGED_IN</role-name>
            <role-name>PLAYER</role-name>
            <role-name>OBSERVER</role-name>
            <role-name>WAITING</role-name>
            <role-name>PLAYER_WAITING</role-name>
            <role-name>OBSERVER_WAITING</role-name>
            <role-name>TABLECREATOR</role-name>
            <role-name>TABLECREATOR_WAITING</role-name>
            <role-name>PLAYER_ON_TURN</role-name>
            <role-name>TABLECREATOR_ON_TURN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>AdminTablePermission</display-name>
        <web-resource-collection>
            <web-resource-name>admintables</web-resource-name>
            <description/>
            <url-pattern>/admintables</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>LOGGED_IN</role-name>
            <role-name>PLAYER</role-name>
            <role-name>OBSERVER</role-name>
            <role-name>PLAYER_WAITING</role-name>
            <role-name>OBSERVER_WAITING</role-name>
            <role-name>TABLECREATOR</role-name>
            <role-name>TABLECREATOR_WAITING</role-name>
            <role-name>PLAYER_ON_TURN</role-name>
            <role-name>TABLECREATOR_ON_TURN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>PlayTablePermission</display-name>
        <web-resource-collection>
            <web-resource-name>move</web-resource-name>
            <description/>
            <url-pattern>/move</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>PLAYER_ON_TURN</role-name>
            <role-name>TABLECREATOR_ON_TURN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>reglog</display-name>
        <web-resource-collection>
            <web-resource-name>reglog</web-resource-name>
            <description/>
            <url-pattern>/reglog</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>sercaAuth</realm-name>
    </login-config>
    <security-role>
        <description/>
        <role-name>UNREGISTERED</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>NOT_LOGGED_IN</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>LOGGED_IN</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>TABLECREATOR</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>TABLECREATOR_WAITING</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>OBSERVER</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>OBSERVER_WAITING</role-name>
    </security-role>
